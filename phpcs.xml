<?xml version="1.0"?>
<ruleset name="Custom Laravel 11 Coding Standard">
    <description>Custom coding standards for Laravel 11 project</description>

    <!-- Directories to scan -->
    <file>app</file>
    <file>routes</file>

    <!-- Basic Sniff Example -->
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EndLine"/>
    
    <rule ref="Squiz.WhiteSpace.LineLength">
        <properties>
            <property name="lineLimit" value="80"/>
            <property name="absoluteLineLimit" value="100"/>
        </properties>
    </rule>
</ruleset>
